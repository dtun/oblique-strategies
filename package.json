{
	"name": "oblique-strategies",
	"version": "0.1.0",
	"private": true,
	"packageManager": "yarn@4.1.0",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev": "concurrently \"yarn workspace @oblique/mobile start\" \"yarn workspace @oblique/mcp-server dev\"",
		"dev:mobile": "yarn workspace @oblique/mobile start",
		"dev:mcp": "yarn workspace @oblique/mcp-server dev",
		"build": "yarn workspaces foreach -pt run build",
		"build:shared": "yarn workspace @oblique/shared build",
		"deploy:mcp": "yarn workspace @oblique/mcp-server deploy",
		"typecheck": "tsc --build",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:shared": "jest --selectProjects @oblique/shared",
		"test:mcp": "jest --selectProjects @oblique/mcp-server",
		"test:mobile": "jest --selectProjects @oblique/mobile",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"vibecheck": "yarn format && yarn typecheck && yarn test",
		"clean": "yarn workspaces foreach -p run clean && rm -rf node_modules"
	},
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.2",
		"concurrently": "^9.1.2",
		"jest": "^29.7.0",
		"prettier": "^3.7.4",
		"ts-jest": "^29.4.6",
		"typescript": "~5.9.2"
	}
}
