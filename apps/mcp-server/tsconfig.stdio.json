{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"module": "ES2022",
		"moduleResolution": "node",
		"target": "ES2022",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"sourceMap": true,
		"types": ["node", "@cloudflare/workers-types"],
		"paths": {
			"@oblique/shared": ["../../packages/shared/src"],
			"@oblique/shared/*": ["../../packages/shared/src/*"]
		}
	},
	"include": [
		"src/stdio.ts",
		"src/stdio-impl.ts",
		"src/storage/mock-kv.ts",
		"src/storage/history.ts",
		"src/mcp/**/*"
	],
	"exclude": ["**/*.test.ts", "node_modules", "dist", ".wrangler"]
}
